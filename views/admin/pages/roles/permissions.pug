            tr()
                td Chỉnh sửa 
                each item in records 
                    td(class="text-center")
                        input(type="checkbox" data-id = item.id data-name="products-category__edit" checked=(item.permissions.includes("products-category__edit")) ? true : false)
            tr()
                td Xóa 
                each item in records 
                    td(class="text-center")
                        input(type="checkbox" data-id = item.id data-name="products-category__deleted" checked=(item.permissions.includes("products-category__deleted")) ? true : false)
            tr 
                td(colspan="4")
                    b Nhóm quyền 
            tr()
