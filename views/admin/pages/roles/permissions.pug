extends ../../layouts/default.pug 
block main 
    h1(class="mb-4") Phân quyền
    div(class="text-right")
        button(
            type="submit"
            class="btn btn-primary mb-3"
            button-submit=`/${prefixAdmin}/roles/permissions`
        ) Update 
    table(
        class="table table-hover table-sm"
        table-permissions
    )
        thead
            tr 
                th Tính năng 
                each item in records 
                    th(class="text-center" role-id=item.id) #{item.title}
        tbody 
            tr 
                td(colspan="4")
                    b Danh sách sản phẩm 
            tr()
                td Xem 
                each item in records 
                    td(class="text-center")
                        input(type="checkbox" data-id = item.id data-name="products_view" checked=(item.permissions.includes("products_view")) ? true : false)
            tr()
                td Thêm mới 
                each item in records 
                    td(class="text-center")
                        input(type="checkbox" data-id = item.id data-name="products_create" checked=(item.permissions.includes("products_create")) ? true : false)
            tr()
                td Chỉnh sửa 
                each item in records 
                    td(class="text-center")
                        input(type="checkbox" data-id = item.id data-name="products_edit" checked=(item.permissions.includes("products_edit")) ? true : false)
            tr()
                td Xóa 
                each item in records 
                    td(class="text-center")
                        input(type="checkbox" data-id = item.id data-name="products_deleted" checked=(item.permissions.includes("products_deleted")) ? true : false)
            tr 
                td(colspan="4")
                    b Danh mục sản phẩm 
            tr()
                td Xem 
                each item in records 
                    td(class="text-center")
                        input(type="checkbox" data-id = item.id data-name="products-category__view" checked=(item.permissions.includes("products-category__view")) ? true : false)
            tr()
                td Thêm mới 
                each item in records 
