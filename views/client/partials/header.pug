include ../mixins/sub-menu.pug
header.header
  .container
    .row.align-items-center  
      .col-2
        .inner-logo
          a(href="/")
            img(src="/images/logo.svg", alt="Logo")
      .col-3 
        h3 Project 1 - IT3150
      .col-3  
        form(
          action="/search"
          method="GET"
        )
          div(class="form-group d-flex mb-0")
            input(
              type="text"
              placeholder="Search here..."
              class="form-control"
              name="keyword"
              value=keyword
            )
            button(
              type="submit"
              class="btn btn-primary ml-3"
            ) Search
      .col-4
        .inner-menu
          ul
            li
              a(href="/") Trang chủ
            li(class="sub-menu")
              a(href="/products") Sản phẩm
              if(layoutCategoryProducts)
                +sub-menu(layoutCategoryProducts)
            li 
              a(href="/cart") Cart(#{cartTotal})