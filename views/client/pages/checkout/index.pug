extends ../../layouts/default.pug 
include ../../mixins/box-head.pug 

block main 
    .container.my-3 
        .row 
            .col-12 
                +box-head(pageTitle)

        .row
            .col-12
                table(class="table table-bordered" cart)
                    thead
                        tr
                        th STT
                        th Ảnh
                        th Tên
                        th Giá
                        th Số lượng
                        th Tổng tiền
                    tbody
                        if(cartDetail.products.length > 0)
                            each product, index in cartDetail.products
                                tr
                                td #{index + 1}
                                td
                                    img(
                                        src=product.productInfo.thumbnail
                                        alt=product.productInfo.title
                                        width="80px"
                                    )
                                td
                                    a(

                                    ) #{product.productInfo.title}
                                td #{product.productInfo.priceNew}$
                                td #{product.quantity}
                                td #{product.totalPrice}$
                                
                        else 
                            h5 No items in cart 
                if(cartDetail.products.length > 0)
                    h3(class="text-right") Tổng đơn hàng: #{cartDetail.totalPrice}$

        .row 
            .col-12 
                .card.p-4.my-4 
                    form(
                        action="/checkout/order"
                        method="POST"
                    )
                        div(class="form-group")
                            label(for="fullName") FullName: 
                            input(
                                type="text"
                                class="form-control"
                                id="fullName"
                                name="fullName"
                                required
                            )
                        div(class="form-group")
                            label(for="phone") Phone: 
                            input(
                                type="text"
                                class="form-control"
                                id="phone"
                                name="phone"
                                required
                            )
                        div(class="form-group")
                            label(for="address") Address : 
                            input(
                                type="text"
                                class="form-control"
                                id="address"
                                name="address"
                                required
                            )
                        .col-12 
                            div(class="form-group")
                                button(type="submit" class="btn btn-success btn-block") Shop now!!!